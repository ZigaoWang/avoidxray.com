// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String    @id @default(cuid())
  email                   String    @unique
  passwordHash            String
  username                String    @unique
  name                    String?
  avatar                  String?
  bio                     String?
  website                 String?
  instagram               String?
  twitter                 String?
  isAdmin                 Boolean   @default(false)
  emailVerified           Boolean   @default(false)
  verificationToken       String?
  verificationTokenExpiry DateTime?
  resetToken              String?
  resetTokenExpiry        DateTime?
  createdAt               DateTime  @default(now())
  photos                  Photo[]
  cameras                 Camera[]
  likes                   Like[]
  comments                Comment[]
  followers               Follow[]  @relation("following")
  following               Follow[]  @relation("followers")
  notifications           Notification[]
  collections             Collection[]
}

model Photo {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  originalPath  String
  thumbnailPath String
  mediumPath    String
  width         Int
  height        Int
  caption       String?
  cameraId      String?
  camera        Camera?    @relation(fields: [cameraId], references: [id])
  filmStockId   String?
  filmStock     FilmStock? @relation(fields: [filmStockId], references: [id])
  published     Boolean    @default(false)
  createdAt     DateTime   @default(now())
  takenDate     DateTime?
  likes         Like[]
  comments      Comment[]
  tags          PhotoTag[]
  collections   CollectionPhoto[]

  @@index([userId])
  @@index([published])
  @@index([createdAt])
  @@index([cameraId])
  @@index([filmStockId])
  @@index([published, createdAt])
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  photoId   String
  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, photoId])
  @@index([photoId])
  @@index([userId])
}

model Camera {
  id              String   @id @default(cuid())
  name            String
  brand           String?
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  photos          Photo[]
  imageUrl        String?
  description     String?
  imageStatus     String   @default("none") // none, pending, approved, rejected
  imageUploadedBy String?
  imageUploadedAt DateTime?

  @@unique([name, userId])
}

model FilmStock {
  id              String   @id @default(cuid())
  name            String   @unique
  brand           String?
  iso             Int?
  photos          Photo[]
  imageUrl        String?
  description     String?
  imageStatus     String   @default("none") // none, pending, approved, rejected
  imageUploadedBy String?
  imageUploadedAt DateTime?
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  follower    User     @relation("followers", fields: [followerId], references: [id], onDelete: Cascade)
  followingId String
  following   User     @relation("following", fields: [followingId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  photoId   String
  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([photoId])
  @@index([userId])
  @@index([createdAt])
}

model Tag {
  id     String     @id @default(cuid())
  name   String     @unique
  photos PhotoTag[]
}

model PhotoTag {
  id      String @id @default(cuid())
  photoId String
  photo   Photo  @relation(fields: [photoId], references: [id], onDelete: Cascade)
  tagId   String
  tag     Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([photoId, tagId])
  @@index([photoId])
  @@index([tagId])
}

model Notification {
  id        String   @id @default(cuid())
  type      String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  actorId   String
  photoId   String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([userId, read])
  @@index([createdAt])
}

model Collection {
  id          String            @id @default(cuid())
  name        String
  description String?
  coverImage  String?
  featured    Boolean           @default(false)
  userId      String?
  user        User?             @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime          @default(now())
  photos      CollectionPhoto[]

  @@index([userId])
  @@index([featured])
}

model CollectionPhoto {
  id           String     @id @default(cuid())
  collectionId String
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  photoId      String
  photo        Photo      @relation(fields: [photoId], references: [id], onDelete: Cascade)
  order        Int        @default(0)

  @@unique([collectionId, photoId])
  @@index([collectionId])
  @@index([photoId])
}

model Challenge {
  id          String   @id @default(cuid())
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
  tagName     String
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
}
